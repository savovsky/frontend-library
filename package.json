{
    "name": "frontend-library",
    "author": "Miroslav Savovski",
    "description": "MonoRepo for reusable React components, CSS, and JS utils",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/savovsky/frontend-library.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build-sb": "build-storybook",
        "build": "build-storybook -c .storybook -o dist",
        "clean": "rm -rf node_modules dist",
        "lerna-bootstrap": "lerna bootstrap --use-workspaces",
        "lerna-test": "lerna run test --parallel",
        "lerna-testcover": "lerna run testcover",
        "lerna-testcovero": "lerna run testcovero",
        "lerna-lint": "lerna run lint",
        "lerna-lint-sass": "lerna run lint-sass",
        "lerna-flow": "lerna run flow",
        "lerna-build": "lerna run build",
        "lerna-publish": "lerna publish -m 'chore: CI Patch Publish' --yes patch",
        "lerna-diff": "lerna diff",
        "lerna-clean": "lerna run clean",
        "start": "start-storybook -p 6006 --no-manager-cache"
    },
    "devDependencies": {
        "@babel/preset-flow": "^7.14.5",
        "@fortawesome/fontawesome-svg-core": "^1.2.34",
        "@fortawesome/free-regular-svg-icons": "^5.15.3",
        "@fortawesome/free-solid-svg-icons": "^5.15.2",
        "@fortawesome/react-fontawesome": "^0.1.14",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@storybook/addon-a11y": "^6.3.12",
        "@storybook/addon-actions": "^6.4.0-beta.11",
        "@storybook/addon-essentials": "^6.3.12",
        "@storybook/addon-notes": "^5.3.21",
        "@storybook/preset-scss": "^1.0.3",
        "@storybook/react": "6.4.9",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/react-hooks": "^5.0.0",
        "@testing-library/user-event": "^12.1.10",
        "css-loader": "5.2.7",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-flowtype": "5.10.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "flow-bin": "0.118.0",
        "jest-environment-jsdom": "^27",
        "lerna": "4.0.0",
        "moment": "^2.29.2",
        "moment-timezone": "^0.5.28",
        "postcss": "8",
        "prettier": "^1.16.4",
        "react": "16.10.0",
        "react-dom": "16.9.0",
        "react-scripts": "5.0.0",
        "react-test-renderer": "^16.12.0",
        "rollup": "^2.58.0",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.1",
        "sass": "^1.55.0",
        "sass-lint": "^1.13.1",
        "sass-loader": "^10",
        "style-loader": "2",
        "uuid": "^8.3.2"
    },
    "resolutions": {
        "babel-loader": "8.1.0",
        "webpack": "4.42.0"
    },
    "dependencies": {}
}
